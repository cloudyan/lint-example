{
  "name": "lint-example",
  "version": "0.0.2",
  "description": "lint example",
  "keywords": [],
  "homepage": "https://github.com/cloudyan/lint-example#readme",
  "bugs": {
    "url": "https://github.com/cloudyan/lint-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudyan/lint-example.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "alex": "alex .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "commit",
    "cz": "./node_modules/cz-customizable/standalone.js",
    "eslint": "cross-env TIMING=1 eslint --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "eslint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "format": "npm run prettier -- --write",
    "lint-staged": "lint-staged --allow-empty",
    "lint:md": "markdownlint --config ./.markdownlint.json README.md */README.md",
    "prepare": "husky install",
    "prettier": "prettier .",
    "sort": "npx sort-package-json",
    "stylelint": "stylelint --cache --allow-empty-input 'src/**/*.{css,less,scss,sass}'",
    "stylelint:fix": "stylelint --fix --cache --allow-empty-input 'src/**/*.{css,less,scss,sass}'",
    "stylelint-prettier-check": "stylelint-config-prettier-check",
    "test": "echo 'test success'",
    "test:fail": "echo \"Error: no test specified\" && exit 1",
    "test:staged": "jest --bail --findRelatedTests",
    "typecheck": "tsc -p ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yml,yaml,css,less,scss}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run eslint:fix",
      "npm run stylelint:fix"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-no-unsupported-browser-features": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.25.0",
    "alex": "^10.0.0",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.0",
    "stylelint": "^14.8.5",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  }
}
